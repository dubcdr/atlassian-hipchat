{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "outDir": "out",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
